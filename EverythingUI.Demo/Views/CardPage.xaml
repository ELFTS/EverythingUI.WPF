<UserControl x:Class="EverythingUI.Demo.Views.CardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:EverythingUI.WPF.Controls;assembly=EverythingUI.WPF">
    <StackPanel>
        <TextBlock Text="卡片控件"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,20"/>

        <!-- 不同样式的卡片 -->
        <TextBlock Text="不同样式的卡片" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,10"/>
        <UniformGrid Columns="3" Rows="1" Margin="0,0,0,20">
            <controls:EverythingCard Header="默认卡片"
                                    CardVariant="Default"
                                    Margin="5"
                                    Padding="15">
                <TextBlock Text="这是默认样式的卡片，带有基础边框和背景。"
                           TextWrapping="Wrap"/>
            </controls:EverythingCard>

            <controls:EverythingCard Header="阴影卡片"
                                    CardVariant="Elevated"
                                    ShadowDepth="8"
                                    Margin="5"
                                    Padding="15">
                <TextBlock Text="这是带阴影效果的卡片，具有更强的视觉层次感。"
                           TextWrapping="Wrap"/>
            </controls:EverythingCard>

            <controls:EverythingCard Header="描边卡片"
                                    CardVariant="Outlined"
                                    Margin="5"
                                    Padding="15">
                <TextBlock Text="这是描边样式的卡片，以边框为主要视觉特征。"
                           TextWrapping="Wrap"/>
            </controls:EverythingCard>
        </UniformGrid>

        <!-- 带页眉和页脚的卡片 -->
        <TextBlock Text="带页眉和页脚的卡片" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,10"/>
        <controls:EverythingCard CardVariant="Elevated"
                                MaxWidth="500"
                                HorizontalAlignment="Left"
                                Padding="20">
            <controls:EverythingCard.Header>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="40" Height="40" Fill="{DynamicResource PrimaryBrush}" Margin="0,0,10,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="张三" FontWeight="Bold"/>
                        <TextBlock Text="软件工程师" FontSize="12" Opacity="0.7"/>
                    </StackPanel>
                </StackPanel>
            </controls:EverythingCard.Header>

            <TextBlock Text="这是一张包含完整信息的卡片示例，展示了页眉、内容和页脚的组合使用方式。卡片可以灵活地适应各种内容布局需求。"
                       TextWrapping="Wrap"
                       Margin="15,10"/>

            <controls:EverythingCard.Footer>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <controls:EverythingButton Content="取消" Padding="15,5" Margin="0,0,10,0"/>
                    <controls:EverythingButton Content="确认" Padding="15,5"/>
                </StackPanel>
            </controls:EverythingCard.Footer>
        </controls:EverythingCard>
    </StackPanel>
</UserControl>
