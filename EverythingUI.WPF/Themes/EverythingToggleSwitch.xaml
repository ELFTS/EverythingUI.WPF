<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:EverythingUI.WPF.Controls">

    <Style TargetType="controls:EverythingToggleSwitch">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:EverythingToggleSwitch">
                    <Grid x:Name="rootGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 左侧文本 -->
                        <TextBlock x:Name="leftText"
                                   Grid.Column="0"
                                   Text="{TemplateBinding OffText}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   Visibility="Collapsed"
                                   Opacity="0.6"/>
                        
                        <!-- 开关容器 -->
                        <Grid x:Name="switchContainer"
                              Grid.Column="1"
                              Width="{TemplateBinding SwitchWidth}"
                              Height="{TemplateBinding SwitchHeight}"
                              VerticalAlignment="Center">
                            
                            <!-- 背景轨道 -->
                            <Border x:Name="trackBackground"
                                    Background="{TemplateBinding UncheckedBackground}"
                                    CornerRadius="4"
                                    SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="2" Opacity="0.2" Color="Black"/>
                                </Border.Effect>
                            </Border>

                            <!-- 开启状态渐变背景 -->
                            <Border x:Name="checkedBackground"
                                    CornerRadius="4"
                                    SnapsToDevicePixels="True"
                                    Opacity="0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Offset="0" Color="{Binding CheckedGradientStartColor, RelativeSource={RelativeSource TemplatedParent}}"/>
                                        <GradientStop Offset="0.5" Color="{Binding CheckedGradientEndColor, RelativeSource={RelativeSource TemplatedParent}}"/>
                                        <GradientStop Offset="1" Color="{Binding CheckedGradientStartColor, RelativeSource={RelativeSource TemplatedParent}}"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <!-- 滑块容器 -->
                            <Canvas x:Name="thumbCanvas" Margin="3,2">
                                <Border x:Name="thumb"
                                        Width="{TemplateBinding ThumbSize}"
                                        Height="{TemplateBinding ThumbSize}"
                                        CornerRadius="3"
                                        Background="{TemplateBinding ThumbBrush}"
                                        Canvas.Left="0"
                                        Canvas.Top="0">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.3" Color="Black"/>
                                    </Border.Effect>
                                </Border>
                            </Canvas>
                        </Grid>
                        
                        <!-- 右侧文本 -->
                        <TextBlock x:Name="rightText"
                                   Grid.Column="1"
                                   Text="{TemplateBinding OnText}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"
                                   Visibility="Collapsed"
                                   Opacity="0.6"/>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- 文本位置触发器 -->
                        <Trigger Property="TextPlacement" Value="Left">
                            <Setter TargetName="leftText" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="leftText" Property="Text" Value="{Binding OnText, RelativeSource={RelativeSource TemplatedParent}}"/>
                            <Setter TargetName="rightText" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="TextPlacement" Value="Right">
                            <Setter TargetName="rightText" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="rightText" Property="Text" Value="{Binding OffText, RelativeSource={RelativeSource TemplatedParent}}"/>
                        </Trigger>
                        
                        <!-- 开启状态动画 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 背景渐变淡入 -->
                                        <DoubleAnimation Storyboard.TargetName="checkedBackground"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- 灰色背景淡出 -->
                                        <DoubleAnimation Storyboard.TargetName="trackBackground"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- 滑块滑动到右侧 - 带弹性回弹效果 -->
                                        <DoubleAnimation Storyboard.TargetName="thumb"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="24"
                                                         Duration="0:0:0.4">
                                            <DoubleAnimation.EasingFunction>
                                                <ElasticEase EasingMode="EaseOut" Oscillations="2" Springiness="5"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- 文本透明度变化 -->
                                        <DoubleAnimation Storyboard.TargetName="leftText"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="rightText"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.3"
                                                         Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 背景渐变淡出 -->
                                        <DoubleAnimation Storyboard.TargetName="checkedBackground"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- 灰色背景淡入 -->
                                        <DoubleAnimation Storyboard.TargetName="trackBackground"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- 滑块滑动到左侧 - 带弹性回弹效果 -->
                                        <DoubleAnimation Storyboard.TargetName="thumb"
                                                         Storyboard.TargetProperty="(Canvas.Left)"
                                                         To="0"
                                                         Duration="0:0:0.4">
                                            <DoubleAnimation.EasingFunction>
                                                <ElasticEase EasingMode="EaseOut" Oscillations="2" Springiness="5"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- 文本透明度恢复 -->
                                        <DoubleAnimation Storyboard.TargetName="leftText"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.6"
                                                         Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="rightText"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.6"
                                                         Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        <!-- 禁用状态 -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="trackBackground" Property="Opacity" Value="0.5"/>
                            <Setter TargetName="checkedBackground" Property="Opacity" Value="0.5"/>
                            <Setter TargetName="thumb" Property="Opacity" Value="0.7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
