<UserControl x:Class="EverythingUI.Demo.Views.TextBoxPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:EverythingUI.WPF.Controls;assembly=EverythingUI.WPF">
    <StackPanel>
        <TextBlock Text="输入框控件"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,20"/>

        <!-- 基础输入框 -->
        <TextBlock Text="基础输入框" 
                   FontWeight="SemiBold" 
                   FontSize="16" 
                   Margin="0,0,0,10"
                   Opacity="0.8"/>
        <controls:EverythingCard CardVariant="Outlined"
                                Padding="20"
                                Margin="0,0,0,20">
            <StackPanel MaxWidth="400" HorizontalAlignment="Left">
                <controls:EverythingTextBox Placeholder="请输入用户名..." Width="300" Margin="0,0,0,10"/>
                <controls:EverythingTextBox Placeholder="请输入密码..." Width="300"/>
            </StackPanel>
        </controls:EverythingCard>

        <!-- 带图标的输入框 -->
        <TextBlock Text="带图标的输入框" 
                   FontWeight="SemiBold" 
                   FontSize="16" 
                   Margin="0,0,0,10"
                   Opacity="0.8"/>
        <controls:EverythingCard CardVariant="Outlined"
                                Padding="20"
                                Margin="0,0,0,20">
            <StackPanel MaxWidth="400" HorizontalAlignment="Left">
                <controls:EverythingTextBox Placeholder="搜索..." Width="300" Margin="0,0,0,10">
                    <controls:EverythingTextBox.Icon>
                        <Path Data="M15.5,14 L14.71,14 L14.43,13.73 C15.41,12.59 16,11.11 16,9.5 C16,5.91 13.09,3 9.5,3 C5.91,3 3,5.91 3,9.5 C3,13.09 5.91,16 9.5,16 C11.11,16 12.59,15.41 13.73,14.43 L14,14.71 L14,15.5 L19,20.49 L20.49,19 L15.5,14 Z M9.5,14 C7.01,14 5,11.99 5,9.5 C5,7.01 7.01,5 9.5,5 C11.99,5 14,7.01 14,9.5 C14,11.99 11.99,14 9.5,14 Z"
                                  Fill="{DynamicResource TextSecondaryBrush}"
                                  Width="18" Height="18"
                                  Stretch="Uniform"/>
                    </controls:EverythingTextBox.Icon>
                </controls:EverythingTextBox>

                <controls:EverythingTextBox Placeholder="邮箱地址" Width="300">
                    <controls:EverythingTextBox.Icon>
                        <Path Data="M20,4 L4,4 C2.9,4 2.01,4.9 2.01,6 L2,18 C2,19.1 2.9,20 4,20 L20,20 C21.1,20 22,19.1 22,18 L22,6 C22,4.9 21.1,4 20,4 Z M20,8 L12,13 L4,8 L4,6 L12,11 L20,6 L20,8 Z"
                                  Fill="{DynamicResource TextSecondaryBrush}"
                                  Width="18" Height="18"
                                  Stretch="Uniform"/>
                    </controls:EverythingTextBox.Icon>
                </controls:EverythingTextBox>
            </StackPanel>
        </controls:EverythingCard>
    </StackPanel>
</UserControl>
