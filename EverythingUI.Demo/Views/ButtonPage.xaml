<UserControl x:Class="EverythingUI.Demo.Views.ButtonPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:EverythingUI.WPF.Controls;assembly=EverythingUI.WPF">
    <StackPanel>
        <TextBlock Text="按钮控件"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,20"/>

        <!-- 基础按钮 -->
        <TextBlock Text="基础按钮（悬停外阴影，按下内阴影）"
                   FontWeight="SemiBold"
                   FontSize="16"
                   Margin="0,0,0,10"
                   Opacity="0.8"/>
        <controls:EverythingCard CardVariant="Elevated"
                                Padding="20"
                                Margin="0,0,0,20">
            <WrapPanel>
                <controls:EverythingButton Content="默认按钮" Margin="0,0,10,10"/>
                <controls:EverythingButton Content="带图标的按钮" Margin="0,0,10,10"/>
                <controls:EverythingButton Content="图标按钮" Padding="12" Margin="0,0,10,10"/>
            </WrapPanel>
        </controls:EverythingCard>

        <!-- 不同圆角 -->
        <TextBlock Text="不同圆角" 
                   FontWeight="SemiBold" 
                   FontSize="16" 
                   Margin="0,0,0,10"
                   Opacity="0.8"/>
        <controls:EverythingCard CardVariant="Elevated"
                                Padding="20"
                                Margin="0,0,0,20">
            <WrapPanel>
                <controls:EverythingButton Content="小圆角 (4px)" CornerRadius="4" Margin="0,0,10,0"/>
                <controls:EverythingButton Content="中圆角 (8px)" CornerRadius="8" Margin="0,0,10,0"/>
                <controls:EverythingButton Content="大圆角 (16px)" CornerRadius="16"/>
            </WrapPanel>
        </controls:EverythingCard>

        <!-- 预设颜色 -->
        <TextBlock Text="预设颜色方案（11种）" 
                   FontWeight="SemiBold" 
                   FontSize="16" 
                   Margin="0,0,0,10"
                   Opacity="0.8"/>
        <controls:EverythingCard CardVariant="Elevated"
                                Padding="20"
                                Margin="0,0,0,20">
            <WrapPanel>
                <controls:EverythingButton Content="黑色" Margin="0,0,10,10">
                    <controls:EverythingButton.GradientStartColor><Color>#808080</Color></controls:EverythingButton.GradientStartColor>
                    <controls:EverythingButton.GradientEndColor><Color>#383838</Color></controls:EverythingButton.GradientEndColor>
                </controls:EverythingButton>
                <controls:EverythingButton Content="灰色" Margin="0,0,10,10">
                    <controls:EverythingButton.GradientStartColor><Color>#E5E5E5</Color></controls:EverythingButton.GradientStartColor>
                    <controls:EverythingButton.GradientEndColor><Color>#A6A6A6</Color></controls:EverythingButton.GradientEndColor>
                </controls:EverythingButton>
                <controls:EverythingButton Content="红色" Margin="0,0,10,10">
                    <controls:EverythingButton.GradientStartColor><Color>#FF5833</Color></controls:EverythingButton.GradientStartColor>
                    <controls:EverythingButton.GradientEndColor><Color>#D43030</Color></controls:EverythingButton.GradientEndColor>
                </controls:EverythingButton>
                <controls:EverythingButton Content="橘色" Margin="0,0,10,10">
                    <controls:EverythingButton.GradientStartColor><Color>#FFC300</Color></controls:EverythingButton.GradientStartColor>
                    <controls:EverythingButton.GradientEndColor><Color>#FF8D1A</Color></controls:EverythingButton.GradientEndColor>
                </controls:EverythingButton>
                <controls:EverythingButton Content="黄色" Margin="0,0,10,10">
                    <controls:EverythingButton.GradientStartColor><Color>#FFEB3B</Color></controls:EverythingButton.GradientStartColor>
                    <controls:EverythingButton.GradientEndColor><Color>#FFC400</Color></controls:EverythingButton.GradientEndColor>
                </controls:EverythingButton>
                <controls:EverythingButton Content="绿色" Margin="0,0,10,10">
                    <controls:EverythingButton.GradientStartColor><Color>#A0D605</Color></controls:EverythingButton.GradientStartColor>
                    <controls:EverythingButton.GradientEndColor><Color>#19A654</Color></controls:EverythingButton.GradientEndColor>
                </controls:EverythingButton>
                <controls:EverythingButton Content="青色" Margin="0,0,10,10">
                    <controls:EverythingButton.GradientStartColor><Color>#00BAAD</Color></controls:EverythingButton.GradientStartColor>
                    <controls:EverythingButton.GradientEndColor><Color>#00998F</Color></controls:EverythingButton.GradientEndColor>
                </controls:EverythingButton>
                <controls:EverythingButton Content="蓝色 (默认)" Margin="0,0,10,10"/>
                <controls:EverythingButton Content="紫色" Margin="0,0,10,10">
                    <controls:EverythingButton.GradientStartColor><Color>#AC33C1</Color></controls:EverythingButton.GradientStartColor>
                    <controls:EverythingButton.GradientEndColor><Color>#8D2C9E</Color></controls:EverythingButton.GradientEndColor>
                </controls:EverythingButton>
                <controls:EverythingButton Content="粉色" Margin="0,0,10,10">
                    <controls:EverythingButton.GradientStartColor><Color>#F7D7EC</Color></controls:EverythingButton.GradientStartColor>
                    <controls:EverythingButton.GradientEndColor><Color>#FF9CDB</Color></controls:EverythingButton.GradientEndColor>
                </controls:EverythingButton>
            </WrapPanel>
        </controls:EverythingCard>
    </StackPanel>
</UserControl>
