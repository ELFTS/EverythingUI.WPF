<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Font Families -->
    <FontFamily x:Key="FontFamilyBase">Segoe UI, Microsoft YaHei, PingFang SC, sans-serif</FontFamily>
    <FontFamily x:Key="FontFamilyMono">Consolas, Monaco, Courier New, monospace</FontFamily>
    
    <!-- Font Sizes -->
    <system:Double x:Key="FontSizeXs" xmlns:system="clr-namespace:System;assembly=mscorlib">10</system:Double>
    <system:Double x:Key="FontSizeSm" xmlns:system="clr-namespace:System;assembly=mscorlib">12</system:Double>
    <system:Double x:Key="FontSizeBase" xmlns:system="clr-namespace:System;assembly=mscorlib">14</system:Double>
    <system:Double x:Key="FontSizeLg" xmlns:system="clr-namespace:System;assembly=mscorlib">16</system:Double>
    <system:Double x:Key="FontSizeXl" xmlns:system="clr-namespace:System;assembly=mscorlib">18</system:Double>
    <system:Double x:Key="FontSize2xl" xmlns:system="clr-namespace:System;assembly=mscorlib">20</system:Double>
    <system:Double x:Key="FontSize3xl" xmlns:system="clr-namespace:System;assembly=mscorlib">24</system:Double>
    <system:Double x:Key="FontSize4xl" xmlns:system="clr-namespace:System;assembly=mscorlib">30</system:Double>
    
    <!-- Font Weights -->
    <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>
    
    <!-- Line Heights -->
    <system:Double x:Key="LineHeightTight" xmlns:system="clr-namespace:System;assembly=mscorlib">1.25</system:Double>
    <system:Double x:Key="LineHeightNormal" xmlns:system="clr-namespace:System;assembly=mscorlib">1.5</system:Double>
    <system:Double x:Key="LineHeightRelaxed" xmlns:system="clr-namespace:System;assembly=mscorlib">1.75</system:Double>
    
</ResourceDictionary>
