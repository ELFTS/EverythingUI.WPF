<UserControl x:Class="EverythingUI.Demo.Views.ToggleSwitchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:EverythingUI.WPF.Controls;assembly=EverythingUI.WPF">
    <StackPanel>
        <TextBlock Text="开关控件"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,20"/>

        <!-- 基础开关 -->
        <TextBlock Text="基础开关" 
                   FontWeight="SemiBold" 
                   FontSize="16" 
                   Margin="0,0,0,10"
                   Opacity="0.8"/>
        <controls:EverythingCard CardVariant="Elevated"
                                Padding="20"
                                Margin="0,0,0,20">
            <WrapPanel>
                <controls:EverythingToggleSwitch Margin="0,0,20,10"/>
                <controls:EverythingToggleSwitch IsChecked="True" Margin="0,0,20,10"/>
            </WrapPanel>
        </controls:EverythingCard>

        <!-- 带文本的开关 -->
        <TextBlock Text="带文本的开关" 
                   FontWeight="SemiBold" 
                   FontSize="16" 
                   Margin="0,0,0,10"
                   Opacity="0.8"/>
        <controls:EverythingCard CardVariant="Elevated"
                                Padding="20"
                                Margin="0,0,0,20">
            <WrapPanel>
                <controls:EverythingToggleSwitch OnText="开启" OffText="关闭" TextPlacement="Right" Margin="0,0,20,10"/>
                <controls:EverythingToggleSwitch OnText="ON" OffText="OFF" TextPlacement="Left" Margin="0,0,20,10"/>
            </WrapPanel>
        </controls:EverythingCard>

        <!-- 不同颜色 -->
        <TextBlock Text="不同颜色" 
                   FontWeight="SemiBold" 
                   FontSize="16" 
                   Margin="0,0,0,10"
                   Opacity="0.8"/>
        <controls:EverythingCard CardVariant="Elevated"
                                Padding="20"
                                Margin="0,0,0,20">
            <WrapPanel>
                <controls:EverythingToggleSwitch IsChecked="True"
                                                 CheckedGradientStartColor="#FF5833"
                                                 CheckedGradientEndColor="#D43030"
                                                 Margin="0,0,20,10"/>
                <controls:EverythingToggleSwitch IsChecked="True"
                                                 CheckedGradientStartColor="#A0D605"
                                                 CheckedGradientEndColor="#19A654"
                                                 Margin="0,0,20,10"/>
                <controls:EverythingToggleSwitch IsChecked="True"
                                                 CheckedGradientStartColor="#AC33C1"
                                                 CheckedGradientEndColor="#8D2C9E"
                                                 Margin="0,0,20,10"/>
            </WrapPanel>
        </controls:EverythingCard>

        <!-- 禁用状态 -->
        <TextBlock Text="禁用状态" 
                   FontWeight="SemiBold" 
                   FontSize="16" 
                   Margin="0,0,0,10"
                   Opacity="0.8"/>
        <controls:EverythingCard CardVariant="Elevated"
                                Padding="20"
                                Margin="0,0,0,20">
            <WrapPanel>
                <controls:EverythingToggleSwitch IsEnabled="False" Margin="0,0,20,10"/>
                <controls:EverythingToggleSwitch IsEnabled="False" IsChecked="True" Margin="0,0,20,10"/>
            </WrapPanel>
        </controls:EverythingCard>
    </StackPanel>
</UserControl>
