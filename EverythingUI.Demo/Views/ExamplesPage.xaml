<UserControl x:Class="EverythingUI.Demo.Views.ExamplesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:EverythingUI.WPF.Controls;assembly=EverythingUI.WPF">
    <StackPanel>
        <TextBlock Text="综合示例"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,20"/>

        <!-- 登录表单 -->
        <TextBlock Text="登录表单" 
                   FontWeight="SemiBold" 
                   FontSize="16" 
                   Margin="0,0,0,10"
                   Opacity="0.8"/>
        <controls:EverythingCard CardVariant="Elevated"
                                Padding="20"
                                Margin="0,0,0,20">
            <StackPanel MaxWidth="400" HorizontalAlignment="Center">
                <TextBlock Text="用户登录"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <controls:EverythingTextBox Placeholder="用户名" Margin="0,0,0,15">
                    <controls:EverythingTextBox.Icon>
                        <Path Data="M12,12 C14.21,12 16,10.21 16,8 C16,5.79 14.21,4 12,4 C9.79,4 8,5.79 8,8 C8,10.21 9.79,12 12,12 Z M12,14 C9.33,14 4,15.34 4,18 L4,20 L20,20 L20,18 C20,15.34 14.67,14 12,14 Z"
                                      Fill="{DynamicResource TextSecondaryBrush}"
                                      Width="18" Height="18"
                                      Stretch="Uniform"/>
                    </controls:EverythingTextBox.Icon>
                </controls:EverythingTextBox>

                <controls:EverythingTextBox Placeholder="密码" Margin="0,0,0,20">
                    <controls:EverythingTextBox.Icon>
                        <Path Data="M18,8 L17,8 L17,6 C17,3.24 14.76,1 12,1 C9.24,1 7,3.24 7,6 L7,8 L6,8 C4.9,8 4,8.9 4,10 L4,20 C4,21.1 4.9,22 6,22 L18,22 C19.1,22 20,21.1 20,20 L20,10 C20,8.9 19.1,8 18,8 Z M12,17 C10.9,17 10,16.1 10,15 C10,13.9 10.9,13 12,13 C13.1,13 14,13.9 14,15 C14,16.1 13.1,17 12,17 Z M15.1,8 L8.9,8 L8.9,6 C8.9,4.29 10.29,2.9 12,2.9 C13.71,2.9 15.1,4.29 15.1,6 L15.1,8 Z"
                                      Fill="{DynamicResource TextSecondaryBrush}"
                                      Width="18" Height="18"
                                      Stretch="Uniform"/>
                    </controls:EverythingTextBox.Icon>
                </controls:EverythingTextBox>

                <controls:EverythingButton Content="登录" HorizontalAlignment="Stretch" Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <controls:EverythingButton Content="忘记密码?" Margin="0,0,20,0"/>
                    <controls:EverythingButton Content="注册账号"/>
                </StackPanel>
            </StackPanel>
        </controls:EverythingCard>

        <!-- 开关控件展示 -->
        <TextBlock Text="开关控件（带弹性回弹效果）" 
                   FontWeight="SemiBold" 
                   FontSize="16" 
                   Margin="0,0,0,10"
                   Opacity="0.8"/>
        <controls:EverythingCard CardVariant="Elevated"
                                Padding="20"
                                Margin="0,0,0,20">
            <StackPanel MaxWidth="400">
                <TextBlock Text="点击开关体验弹性回弹动画效果"
                           FontSize="14"
                           Opacity="0.6"
                           Margin="0,0,0,15"/>
                
                <!-- 基础开关 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <controls:EverythingToggleSwitch x:Name="switch1"/>
                    <TextBlock Text="基础开关" 
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"
                               Opacity="0.8"/>
                </StackPanel>
                
                <!-- 带文本的开关 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <controls:EverythingToggleSwitch OnText="开启" 
                                                     OffText="关闭"
                                                     TextPlacement="Right"
                                                     IsChecked="True"/>
                    <TextBlock Text="带文本标签" 
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"
                               Opacity="0.8"/>
                </StackPanel>
                
                <!-- 左侧文本开关 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <controls:EverythingToggleSwitch OnText="通知" 
                                                     OffText="通知"
                                                     TextPlacement="Left"/>
                    <TextBlock Text="文本在左侧" 
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"
                               Opacity="0.8"/>
                </StackPanel>
                
                <!-- 自定义颜色开关 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <controls:EverythingToggleSwitch CheckedGradientStartColor="#FF6B6B"
                                                     CheckedGradientEndColor="#EE5A6F"
                                                     IsChecked="True"/>
                    <TextBlock Text="自定义渐变颜色" 
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"
                               Opacity="0.8"/>
                </StackPanel>
                
                <!-- 禁用状态开关 -->
                <StackPanel Orientation="Horizontal">
                    <controls:EverythingToggleSwitch IsEnabled="False"/>
                    <TextBlock Text="禁用状态" 
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"
                               Opacity="0.8"/>
                </StackPanel>
            </StackPanel>
        </controls:EverythingCard>
    </StackPanel>
</UserControl>
